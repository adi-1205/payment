<div class="container">
    <div class="blog m-5 p-5 border rounded shadow bg-body-tertiary">
        <div class="row">
            <div class="col-4">
                <div class="back">
                    <a href="/" class="btn">
                        <span><i class="fa-solid fa-arrow-left"></i></span>
                        Go to Home
                    </a>
                </div>
                <div class="thumbnail">
                    <img src="{{url}}" class="img-fluid read-blog-img" alt="">
                </div>

                <div class="author mt-3">
                    <h4>Post by : {{author}}</h4>
                </div>
            </div>

            <div class="col-8">
                <div class="title text-center">
                    <h3 class="fw-bold">{{title}}</h3>
                </div>
                <div class="excerpt m-3 p-3 pt-1 pb-1 border">
                    <p>
                        {{excerpt}}
                    </p>
                </div>
                <div class="postBody m-3 pb-1 pt-1 p-3 border">
                    {{{body}}}
                </div>
            </div>
        </div>
    </div>
</div>